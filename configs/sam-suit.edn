          :scenes [{:id :buzzing-bee
                    :display-name "buzzing bee"
                    :led-layout :normal
                    :layer-map {:global-bottom
                                [[fill-color [:rgb 0 0 0]]
                                 [buzzing-bee {:interval 500 :stripe-width 20}]
                                 [hive-status {:start-x 220 :start-y 140 :spacing 20 :color [:hsb 0 60 50] :direction :vertical}]]}}

                   {:id :rain
                    :display-name "rain"
                    :led-layout :normal
                    :layer-map {:global-bottom [[rain {:interval 10 :num-droplets 50}]
                                                [hive-status {:start-x 220 :start-y 140 :spacing 20 :color [:hsb 0 60 50] :direction :vertical}]]}}

                   {:id :gold-dust
                    :display-name "gold dust"
                    :led-layout :normal
